<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header">Configurations</h3>
  </div>
  <!-- /.col-lg-12 -->
</div>


<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Available Configurations
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-configurations">
            <thead>
              <tr>
                <th>Name</th>
                <th>Algorithm</th>
                <th width="250px">Created At</th>
                <th width="250px"></th>
              </tr>
            </thead>
            <tbody>

              <% @configurations.each do |configuration| %>
              <tr>
                <td><%= configuration.name %></td>
                <td>Genetic ...</td>
                <td><%= configuration.created_at %></td>
                <td>
                  <%= link_to 'Execute', '/configurations/execute/'+configuration.id.to_s ,class: 'btn btn-default btn-xs' %> &nbsp;&nbsp;
                  <%= link_to 'Edit', edit_configuration_path(configuration) ,class: 'btn btn-info btn-xs' %> &nbsp;&nbsp;
                  <%= link_to 'Destroy', configuration, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-xs' %>
                </td>
                </tr>
              <% end %>

            </tbody>
          </table>
          <%= will_paginate @configurations, renderer: BootstrapPagination::Rails %>
        </div>
        <br>
        <!-- /.table-responsive -->
        <%= link_to 'New Configuration', new_configuration_path, class: 'btn btn-default' %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
