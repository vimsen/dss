 <div class="row">
                <div class="col-lg-12">
                     <h3 class="page-header">Prosumers</h3>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                				Available Prosumers
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-prosumers">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
      										<th>Location</th>
      										<th>Cluster</th>
      										<th>Users</th>
      										<th colspan="3"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    	
      <% @prosumers.each do |prosumer| %>
      <tr>
        <td><%= prosumer.name %></td>
        <td><%= prosumer.location %></td>
        <td><%= link_to prosumer.cluster.name, prosumer.cluster unless prosumer.cluster.nil?  %></td>
        <td><%= render(partial: "users/username", spacer_template: "common/comma_spacer", collection: prosumer.users, as: :user) || "No users" %></td>
        <td><%= link_to 'Show', prosumer %></td>
        <td><%= link_to 'Edit', edit_prosumer_path(prosumer) %></td>
        <td><%= link_to 'Destroy', prosumer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
                                                          
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->                       
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
    <!-- /.row -->

    <div class="row">
                <div class="col-lg-12">
<%= link_to 'New Prosumer', new_prosumer_path %>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            
<br>
