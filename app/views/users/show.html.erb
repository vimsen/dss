<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header"><small>User:</small> <%= @user.email -%>
      <small>
        | <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-info btn-xs' %>
        | <%= link_to 'All users', users_path ,class: 'btn btn-warning btn-xs'%>
      </small>
    </h3>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row ">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        User info
      </div>
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt>Email:</dt>
          <dd><%= @user.email %></dd>

          <dt>Roles:</dt>
          <dd><%= render(partial: "roles/rolename", spacer_template: "common/comma_spacer", collection: @user.roles, as: :role) || "No roles"  %></dd>

          <dt>Prosumers:</dt>
          <dd><%= render(partial: "prosumers/prosumername", spacer_template: "common/comma_spacer", collection: @user.prosumers, as: :prosumer) || "No Prosumers" %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>



