
  <div class="panel-heading">
      <h3 class="panel-title">Forgot your password?</h3>
  </div>
   
  <div class="panel-body">

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  		<%= devise_error_messages! %>

  		<div class="devise-spacer"><%= f.label :email %><br />
  		<%= f.email_field :email, autofocus: true, :class=> "form-control", required: true %></div>

  		<div class="devise-spacer"><%= f.submit "Send me reset password instructions", :class => "btn btn-primary" %></div>
  		
	<% end %>

	<%= render "users/shared/links" %>
	
  </div>
