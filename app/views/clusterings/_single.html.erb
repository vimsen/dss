            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <div class="input-group">
                    <%= label_tag "Name:", nil, class: "control-label" %>
                    <%= text_field_tag "clustering[temp_clusters_attributes][#{cl_counter.to_i + 1}][name]", cl.name, {class: "form-control"} %>
                  </div>
                  <div class="input-group"> 
                    <%= label_tag "Description:", nil, class: "control-label" %>
                    <%= text_field_tag "clusterdescriptions[]", cl.description, {class: "form-control"} %>
                   </div>
                  <div class="input-group">
                    <%= label_tag "Prosumers:", nil, class: "control-label" %>
                    <ul class="list-inline connectedSortable" id="<%= "prosumer_list_#{cl_counter.to_i + 1}" -%>" >
                      <% cl.prosumers.each do |p| %>
                        <li id="<%= "prosumer_#{p.id}" -%>"><%= p.name -%><div style="visibility: hidden;"><%= p.id -%></div></li>
                      <% end %>
                    </ul>
                    
                  </div>
                  
                  <%= hidden_field_tag "clusterprosumers[]", cl.prosumers.map {|p| p.id}.join(","), id: "hidden_#{cl_counter.to_i + 1}" %>
                  <%= hidden_field_tag "clusterids[]", cl.id %>
                </div>
              </div>  
              <div class="col-md-4">
                <div id="<%= "chart_#{cl_counter.to_i + 1}" -%>" style="height: 200px;width:300px" ></div>
              </div>  
              <hr/>
            </div>