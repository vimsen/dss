<h1>Listing energy_types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @energy_types.each do |energy_type| %>
      <tr>
        <td><%= energy_type.name %></td>
        <td><%= link_to 'Show', energy_type %></td>
        <td><%= link_to 'Edit', edit_energy_type_path(energy_type) %></td>
        <td><%= link_to 'Destroy', energy_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

