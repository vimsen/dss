<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header"><small>Data point:</small> <%= @data_point.id -%>
      <small>
        | <%= link_to 'Edit', edit_data_point_path(@data_point), class: 'btn btn-info btn-xs' %>
        | <%= link_to 'All data points', data_points_path, class: 'btn btn-warning btn-xs'%>
      </small>
    </h3>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row ">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Data point info
      </div>
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt>Prosumer:</dt>
          <dd><%= render partial: "prosumers/prosumername", :locals => { :prosumer => @data_point.prosumer } %></dd>

          <dt>Interval:</dt>
          <dd><%= @data_point.interval.name %></dd>

          <dt>Timestamp:</dt>
          <dd><%= @data_point.timestamp %></dd>

          <dt>Production:</dt>
          <dd><%= round_or_null @data_point.production, 2 %></dd>

          <dt>Consumption:</dt>
          <dd><%= round_or_null @data_point.consumption, 2 %></dd>

          <dt>Storage:</dt>
          <dd><%= round_or_null @data_point.storage, 2 %></dd>

          <dt>F timestamp:</dt>
          <dd><%= @data_point.f_timestamp %></dd>

          <dt>F production:</dt>
          <dd><%= round_or_null @data_point.f_production, 2 %></dd>

          <dt>F consumption:</dt>
          <dd><%= round_or_null @data_point.f_consumption, 2 %></dd>

          <dt>F storage:</dt>
          <dd><%= round_or_null @data_point.f_storage, 2 %></dd>

          <dt>Dr:</dt>
          <dd><%= round_or_null @data_point.dr, 2 %></dd>

          <dt>Reliability:</dt>
          <dd><%= round_or_null @data_point.reliability, 2 %></dd>

        </dl>
      </div>
    </div>
  </div>
</div>

