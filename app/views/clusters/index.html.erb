<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Prosumer locations
      </div>
      <div class="panel-body">
        <%= render partial: "charts/map", :locals => {:prosumers => Prosumer.all} %>
      </div>
    </div>
  </div>
  <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listing clusters
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-clusters">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Prosumers</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @clusters.each do |cluster| %>
              <tr>
                <td><%= cluster.name %></td>
                <td><%= cluster.description %></td>
                <td><%= render(partial: "prosumers/prosumername", spacer_template: "common/comma_spacer", collection: cluster.prosumers, as: :prosumer) || "No Prosumers" %></td>
                <td><%= link_to 'Show', cluster,class: 'btn btn-success btn-xs' %></td>
                <td><%= link_to 'Edit', edit_cluster_path(cluster) ,class: 'btn btn-info btn-xs'%></td>
                <td><%= link_to 'Destroy', cluster, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
        <%= link_to 'New Cluster', new_cluster_path,class: 'btn btn-default btn-xs' %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<br>

