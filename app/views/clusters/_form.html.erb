<%= form_for(@cluster, html: {class: "form-horizontal"}) do |f| %>
  <% if @cluster.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cluster.errors.count, "error") %> prohibited this cluster from being saved:</h2>

      <ul>
      <% @cluster.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prosumers, class: "col-sm-2 control-label" %><br>
    <div class="col-sm-10">
      <%= select_tag "prosumers",
              options_from_collection_for_select(Prosumer.all,
                  'id', 'name',@cluster.prosumers.map{ |j| j.id }),
                  :multiple => true, class: "form-control", :prompt => "Please select", id: :cluster_prosumers %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
