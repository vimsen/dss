<%= form_for(@meter) do |f| %>
  <% if @meter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meter.errors.count, "error") %> prohibited this meter from being saved:</h2>

      <ul>
      <% @meter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :mac, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :mac, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prosumer_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= collection_select(:meter, :prosumer_id, Prosumer.all.order(name: :asc), :id, :name, {:include_blank => true}, {class: "form-control"}) %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
