
<div style="padding:10px 0 20px 0;">
    <button  type="button" class="btn btn-primary" onclick="CloudPlatforms.refreshTable();">Refresh</button>
    <button  type="button" class="btn btn-primary" onclick="CloudPlatforms.deleteInstances();">Delete</button>
    <a class="btn btn-primary" style="color: #fff; background-color: #428bca;border-color: #357ebd;" href="/cloud_platform/chart">Charts</a>
</div>

<table id="instances-table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
	    <th></th>
            <th>Instance</th>
            <th>Worker</th>
            <th>Status</th>
	    <th>Created At</th>
	    <th>Updated At</th>
        </tr>
    </thead>
</table>

 <script type="text/javascript">

  $(document).ready(function() {

    CloudPlatforms.loadWebSocket('<%= ENGINE_CONFIG[:engine][:websocket_address] %>', <%= ENGINE_CONFIG[:engine][:websocket_port] %>);

    CloudPlatforms.loadDataTable();

  } );

</script>

