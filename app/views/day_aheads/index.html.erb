<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listing day ahead forecasts
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-data-points">
            <thead>
              <tr>
                <th><%= sortable "prosumers.name", "Prosumer" -%></th>
                <th><%= sortable "date", "Date" -%></th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @day_aheads.each do |day_ahead| %>
              <tr>
                <td><%= render(partial: "prosumers/prosumername", :locals => { :prosumer => day_ahead.prosumer}) || "No Prosumers" %></td>
                <td><%= day_ahead.date %></td>
                <td><%= link_to 'Show', day_ahead, class: 'btn btn-success btn-xs' %></td>
                <td><%= link_to 'Edit', edit_day_ahead_path(day_ahead), class: 'btn btn-info btn-xs' %></td>
                <td><%= link_to 'Destroy', day_ahead, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate @day_aheads, renderer: BootstrapPagination::Rails %>
        </div>
        <!-- /.table-responsive -->
        <%= link_to 'New Day ahead', new_day_ahead_path, class: 'btn btn-default btn-xs' %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<br>

