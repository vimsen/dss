<h1>Listing day_aheads</h1>

<table class="table">
  <thead>
    <tr>
      <th>Prosumer</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @day_aheads.each do |day_ahead| %>
      <tr>
        <td><%= render(partial: "prosumers/prosumername", :locals => { :prosumer => day_ahead.prosumer}) || "No Prosumers" %></td>
        <td><%= day_ahead.date %></td>
        <td><%= link_to 'Show', day_ahead %></td>
        <td><%= link_to 'Edit', edit_day_ahead_path(day_ahead) %></td>
        <td><%= link_to 'Destroy', day_ahead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Day ahead', new_day_ahead_path %>
