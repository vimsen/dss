<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listing clusterings
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-clusterings">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Clusters</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @clusterings.each do |clustering| %>
              <tr>
                <td><%= clustering.name %></td>
                <td><%= clustering.description %></td>
                <td><%= render(partial: "clustering_short", :locals => {:clustering => clustering}) %></td>
                <td><%= link_to 'Show', clustering,class: 'btn btn-success btn-xs' %></td>
                <td><%= link_to 'Edit', edit_clustering_path(clustering) ,class: 'btn btn-info btn-xs'%></td>
                <td><%= link_to 'Destroy', clustering, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
        <%= link_to 'New Clustering', new_clustering_path,class: 'btn btn-success btn-xs' %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<br>

