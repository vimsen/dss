<h1>Listing measurements</h1>

<table class="table">
  <thead>
    <tr>
      <th>Timeslot</th>
      <th>Power</th>
      <th>Prosumer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.timeslot %></td>
        <td><%= measurement.power %></td>
        <td><%= link_to measurement.prosumer.name, prosumer_path(measurement.prosumer) %></td>
        
        <td><%= link_to 'Show', measurement,class: 'btn btn-success btn-xs' %></td>
		<td><%= link_to 'Edit', edit_measurement_path(measurement) ,class: 'btn btn-info btn-xs'%></td>		       
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

