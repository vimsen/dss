<h1>Listing energy_prices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Dayhour</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @energy_prices.each do |energy_price| %>
      <tr>
        <td><%= energy_price.date %></td>
        <td><%= energy_price.dayhour %></td>
        <td><%= energy_price.price %></td>
        <td><%= link_to 'Show', energy_price %></td>
        <td><%= link_to 'Edit', edit_energy_price_path(energy_price) %></td>
        <td><%= link_to 'Destroy', energy_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

